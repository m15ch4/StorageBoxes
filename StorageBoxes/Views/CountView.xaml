<Window x:Class="StorageBoxes.Views.CountView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StorageBoxes.Views"
        mc:Ignorable="d"
        Title="CountView" Height="173.8" Width="309.6" AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False">
    <Border BorderBrush="#FF003742" BorderThickness="1" Margin="1,1,1,1">
        <Grid Background="#FFF2FEFF">
            <Label Content="Ilość:" Margin="10,10,227.2,0" VerticalAlignment="Top" FontSize="20"/>
            <Slider x:Name="CountSlider" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top" Width="279" Value="1" Minimum="1" Maximum="{Binding Maximum}"/>
            <Label x:Name="CountLabel" Content="1" Margin="77,10,10.2,0" VerticalAlignment="Top" FontSize="20"/>
            <Button x:Name="CountConfirm" Content="Zatwierdź" Margin="91,100,90.2,0" VerticalAlignment="Top" FontSize="20"/>
        </Grid>
    </Border>
</Window>
