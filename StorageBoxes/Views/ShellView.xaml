<Window x:Class="StorageBoxes.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.caliburnproject.org">

    <Grid Background="White">
        <ComboBox x:Name="Categories" DisplayMemberPath="CategoryName" SelectedItem="{Binding CategoriesSelectedItem}" HorizontalAlignment="Left" Margin="10,119,0,0" VerticalAlignment="Top" Width="300" Height="30" FontSize="20"/>
        <ListBox x:Name="Products" DisplayMemberPath="ProductName" SelectedItem="{Binding ProductsSelectedItem}" Margin="10,154,0,9.6" HorizontalAlignment="Left" Width="300" FontSize="20"/>
        <Button x:Name="OpenDialog" Content="Dialog" HorizontalAlignment="Left" Margin="677,476,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>

</Window>